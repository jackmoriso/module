module my_address::hello_world_bigguy {
    use std::string;
    use std::signer;

    struct Message has key {
        text: string::String,
    }

    public entry fun set_message(account: &signer, text: string::String) {
        let message = Message { text };
        move_to<Message>(account, message);
    }

    #[view]
    public fun get_message(addr: address): string::String acquires Message {
        borrow_global<Message>(addr).text
    }
}
